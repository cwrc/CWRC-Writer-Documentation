    <taskbody>
        <steps>
            <step>
                <cmd>Highlight the <?oxy_insert_start author="ilovan" timestamp="20140928T232733-0600"?>annotated <?oxy_insert_end?>text<?oxy_delete author="ilovan" timestamp="20140928T232742-0600" content=" that is within the entity that you would like to delete"?>.</cmd>
                <info>
                    <?oxy_delete author="ilovan" timestamp="20140928T233017-0600" content="Currently, removing an entity from the document that deletes the text as well."?>
                    <image placement="break" href="http://beta.cwrc.ca/islandora/object/cwrc%3A4e5baa86-5db9-4eed-9194-a68f467772bf/datastream/OBJ/view" id="image_uvx_hxd_lp" align="center" height="3in" width="5in"></image>
                </info>
            </step>
            <step>
                <cmd>Right-click on the highlighted text and choose the <cmdname>Remove Tag</cmdname> option.<image placement="break" href="http://beta.cwrc.ca/islandora/object/cwrc%3Aa18805e2-2e30-45cb-8b49-bd77094ca170/datastream/OBJ/view" id="image_qtk_qxd_lp" align="center" height="3in" width="5in"></image></cmd>
            </step>
        </steps>
        <result>
            <?oxy_attributes type="&lt;change type=&quot;inserted&quot; author=&quot;ilovan&quot; timestamp=&quot;20140928T233150-0600&quot; /&gt;"?>
